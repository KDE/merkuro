{
    "id": "org.kde.merkuro",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.9",
    "sdk": "org.kde.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Nightly)",
    "command": "run_merkuro.sh",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=gpg-agent",
        "--device=dri",
        "--filesystem=~/.gnupg:create",
        "--own-name=org.freedesktop.Akonadi",
        "--own-name=org.freedesktop.Akonadi.*",
        "--own-name=org.freedesktop.Akonadi.Control.*",
        "--own-name=org.freedesktop.Akonadi.Agent.*",
        "--own-name=org.freedesktop.Akonadi.Resource.*",
        "--own-name=org.kde.kalendarac",
        "--own-name=org.kde.kalendarr",
        "--own-name=org.kde.accountwizard",
        "--own-name=org.kde.pimsettingsexporter",
        "--own-name=org.kde.pim.*",
        "--talk-name=org.kde.Solid.PowerManagement",
        "--talk-name=org.kde.kded5",
        "--talk-name=org.kde.kded6",
        "--talk-name=org.kde.kglobalaccel",
        "--talk-name=org.kde.JobViewServer",
        "--talk-name=org.kde.klauncher5",
        "--talk-name=org.kde.knotify",
        "--talk-name=org.kde.kwalletd5",
        "--talk-name=org.kde.kwalletd6",
        "--talk-name=org.kde.kcookiejar5",
        "--system-talk-name=org.freedesktop.NetworkManager",
        "--env=SASL_PATH=/app/lib/sasl2"
    ],
    "cleanup": [
        "/lib/cmake",
        "/lib/pkgconfig",
        "/lib/plugins/designer",
        "/include",
        "/docs",
        "/mkspecs",
        "/share/man",
        "/bin/afmtodit",
        "/usr/bin/xsd",
        "/lib/libKF5*.so",
        "/lib/libboost_*.so",
        "*.a",
        "*.la"
    ],
    "copy-icon": true,
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "24.08",
            "add-ld-path": ".",
            "no-autodownload": false
        }
    },
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ],
    "modules": [
        {
            "name": "libetebase",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir .cargo",
                "cp cargo/config .cargo/",
                "source /usr/lib/sdk/rust-stable/enable.sh && cargo --offline fetch --manifest-path Cargo.toml",
                "source /usr/lib/sdk/rust-stable/enable.sh && cargo --offline build --release",
                "PREFIX=/app make V=1 VERBOSE=1 pkgconfig",
                "PREFIX=/app make V=1 VERBOSE=1 install",
                "mv /app/lib/libetebase.so /app/lib/libetebase.so.0",
                "ln -s /app/lib/libetebase.so.0 /app/lib/libetebase.so"
            ],
            "build-options": {
                "append-path": "/usr/lib/sdk/rust-stable/bin"
            },
            "sources": [
                "flatpak/libetebase-dependencies-cargo-generator.json",
                {
                    "type": "archive",
                    "url": "https://github.com/etesync/libetebase/archive/v0.5.8/libetebase-0.5.8.tar.gz",
                    "sha256": "4f2623a6e194aa3df69307d13ad00c42ec853a1af02ca329e35cd829ff472145",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 235050,
                        "stable-only": true,
                        "url-template": "https://github.com/etesync/libetebase/archive/v$version/libetebase-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "cyrus-sasl2",
            "config-opts": [
                "--with-dblib=berkeley",
                "--without-pam",
                "--without-opie",
                "--without-des",
                "--disable-gssapi",
                "--enable-cram",
                "--enable-digest",
                "--enable-otp",
                "--enable-plain",
                "--enable-login",
                "--with-plugindir=/app/lib/sasl2"
            ],
            "build-options": {
                "env": {
                    "CFLAGS": "-Wno-implicit-function-declaration"
                }
            },
            "no-parallel-make": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/cyrusimap/cyrus-sasl/archive/cyrus-sasl-2.1.28.tar.gz",
